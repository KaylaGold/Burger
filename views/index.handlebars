<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center" id="top">
            <img src="/assets/img/burger2.jpg" alt="burger">
            <h1>Eat-Da-Burger! </h1>
        </div>
      </div>


        <div class="container">
            <div class="row">
                <div class="col-sm-12" id="enter">
                    <form action="/burgers/create" method="POST">
                        <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                        <br>
                        <p>Lets Build Your Own Burger! What Kind of Burger Would You Like to Eat? </p>
                        <button type="submit" class="btn btn-primary" id="text-enter-button">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Burgers Ready/Available to Eat -->
        <div class="row">
            <div class="col-sm-6" class="task">
                <h3>Burgers Ready to Eat!</h3>
                <div class="row">
                    {{#each burgers}} {{#unless this.devoured}}

                    <div class="col-sm-9">
                        <div class="burger">
                            {{this.id}} {{this.burger_name}}
                        </div>
                        <div class="col-sm-3">
                            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                                <input type="hidden" type="text" name="burger_id" value={{this.id}}>
                                <br>
                                <button type="submit" class="btn btn-default">Devour it!</button>
                            </form>
                        </div>
                        {{/unless}} {{/each}}
                    </div>
                </div>
            </div>


            <!--Devoured Burgers -->
            <div class="col-sm-6" class="task">
                <h3>Devoured Burgers</h3>
            </div>
            <div class="panel-body">
                {{#each burgers}} {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly> {{/if}} {{/each}}
            </div>
        </div>
    </div>
